@model IEnumerable<Stock>

@{
    ViewBag.Title = "Explore";
    ViewBag.CurrentUrl = "~/Stocks/Explore";
}


<div class="text-grey ml">
    <span>Stocks</span>
    <i class="fa-solid fa-caret-right"></i>
    <span>Explore</span>
</div>

<div class="flex">
    <div class="w-50">
        <div class="box">
            <div class="list-container">
                <div>
                    <span class="text-grey">Stocks</span>
                </div>

                <ul class="list">
                    @foreach (var stock in Model)
                    { 
                        <li>
                            <a href="~/Stocks/Explore/@stock.StockSymbol">
                                <h4>@stock.StockName</h4>
                                <div class="text-grey">(@stock.StockSymbol)</div>
                            </a>
                        </li>
                    }
                </ul>

                @if(Model.Count() == 0){
                    <div class="mt text-blue">No stocks found</div>
                }
            </div>
        </div>
    </div>

    <div class="flex-1" id="stock-details">
        @if(ViewBag.Stock != null){
            @await Component.InvokeAsync("SelectedStock", new { stock = ViewBag.Stock })
        }
    </div>

</div>